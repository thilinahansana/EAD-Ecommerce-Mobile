<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color for the input field -->
    <solid android:color="@color/inputclr"/>

    <!-- Set the corner radius for rounded edges -->
    <corners android:radius="50dp"/>

    <!-- Optional: Add a border (stroke) around the input field -->
    <stroke android:width="1dp" android:color="@color/grayishWhite"/>

    <!-- Padding inside the input field -->
    <padding android:left="10dp" android:right="10dp" android:top="8dp" android:bottom="8dp"/>
</shape>
