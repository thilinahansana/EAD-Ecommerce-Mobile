<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when the item is selected -->
    <item android:drawable="@color/white" android:state_checked="true" android:color="@color/white" />
    <!-- Background when the item is not selected (transparent or default background) -->
    <item android:drawable="@android:color/transparent" android:state_checked="false" android:color="@color/white" />
</selector>
