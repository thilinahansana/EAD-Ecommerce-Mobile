<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the layout -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional: border around the layout -->
    <stroke
        android:width="1dp"
        android:color="@color/grayishWhite" />

    <!-- Optional: padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
